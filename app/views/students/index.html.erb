
<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table border="1">
  <thead >
    <tr>
      <th> Roll No. </th>
      <th> Name </th>
      <th> Mobile </th>
      <th> Branch </th>
      <th> Year </th>
      <th> Date of Birth </th>
      
      <th> City </th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.roll %></td>
        <td><%= student.name %></td>
        <td><%= student.mobile %></td>
        <td><%= student.branch %></td>
        <td><%= student.year %></td>
        <td><%= student.d_o_b %></td>
        
        <td><%= student.city %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if student.avatar.attachment.present? %>
          <td><%= link_to 'Photo', rails_blob_path(student.avatar, only_path: true) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

